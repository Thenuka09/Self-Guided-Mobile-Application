<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/counsilorLayout"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp">

            <TextView
                android:id="@+id/councilorMessage"
                android:padding="20dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is counsilor message"
                android:background="@drawable/msg_back"/>
            
            <TextView
                android:id="@+id/councilorMessageTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11-11-2024 7:15 PM"
                android:textSize="14sp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/studentLayout"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp">

            <TextView
                android:id="@+id/studentMessage"
                android:padding="20dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is Student message"
                android:background="@drawable/my_msg_back"/>

            <TextView
                android:layout_gravity="end"
                android:id="@+id/studentMessageTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11-11-2024 7:15 PM"
                android:textSize="14sp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>